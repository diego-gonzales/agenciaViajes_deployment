extends ./layout/index

block miContenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales

        .row 
            .col-md-12
                h2.display-block.w-100.text-center Agrega un testimonial

                //- importante ponder este if para que cuando cargue la pagina testimoniales no bote error ya que la primera vez no hay errores
                //- porque no se usa el formulario
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.msj
            
            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre: 
                            input#nombre(type="text", placeholder="Escribe tu nombre", name="nombre", class="form-control", value= nombre)
                        .form-group
                            label(for="correo") Correo: 
                            input#correo(type="text", placeholder="Escribe tu correo", name="correo", class="form-control", value= correo)
                        .form-group
                            label(for="mensaje") Mensaje: 
                            textarea#mensaje(type="text", placeholder="Escribe tu mensaje", name="mensaje", class="form-control", rows=3)= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")